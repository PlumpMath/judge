<html>
  <head>
    <title><%=__("boardMainTitle")%></title>
    <%- include ../head.ejs %>
    <link rel="stylesheet" type="text/css" href="/static/css/board/list.css">
    <script src="/static/js/board/list.js"></script>
  </head>
  <body>
    <script>
      <%if(subjectProblem!=0){%>var subjectProblem=<%=subjectProblem%>, problemBoard=1;<%}%>
      <%if(subject!=null||subject!=undefined){%>var subject='<%=subject%>';<%}%>
    </script>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><%=__("judgeTitle")%></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown active">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%=__("board")%>
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/board"><%=__("allPosts")%></a></li>
                <li><a href="/board/free"><%=__("free")%></a></li>
                <li><a href="/board/code"><%=__("code")%></a></li>
                <li><a href="/board/qna"><%=__("qna")%></a></li>
                <li><a href="/board/help"><%=__("help")%></a></li>
              </ul>
            </li>
            <li><a href="/problems"><%=__("problems")%></a></li>
            <li><a href="/result"><%=__("submitHistory")%></a></li>
            <li><a href="/rank"><%=__("rank")%></a></li>
            <li><a href="#"><%=__("contests")%></a></li>
          </ul>
          <%- include ./../topbar-right.ejs %>
        </div>
      </div>
    </nav>
    <div class="container" id="div-content">
      <script>
        var page=<%= page %>;
      </script>
      <div class="row">
        <div class="col-md-3">
          <div class="list-group" id="div-sidebar" data-spy="affix">
            <a class="list-group-item item-types active" data-type="-1"><%=__("board")%></a>
        	</div>
    		</div>
        <div class="col-md-9">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th><%=__("title")%></th>
                <th><%=__("author")%></th>
                <th><%=__("written_time")%></th>
              </tr>
            </thead>
            <tbody>
              <%for(var i=0;i<posts.length;i++) {%>
                <tr>
                  <td><%=posts[i].id%></td>
                  <td><a href="<%='/board/post/'+posts[i].id%>"><%=posts[i].title%></a></td>
                  <td><a href="<%='/user/'+posts[i].author%>"><%=posts[i].author_nick%></a></td>
                  <td data-toggle="tooltip" data-placement="left" title="<%=posts[i].upload_time%>"><%=posts[i].upload_time_text%></td>
                </tr>
              <%}%>
            </tbody>
          </table>
          <div id="div-pages" class="row">
            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default" id="btn-prevpage"><%=__("prev")%></button>
              <button type="button" class="btn btn-default"><%=__("pageText",page)%></button>
              <button type="button" class="btn btn-default" id="btn-nextpage"><%=__("next")%></button>
            </div>
          </div>
          <div id="div-board-controls">
            <button class="btn btn-sm btn-info" id="btn-write"><span class="glyphicon glyphicon-pencil"></span> <%=__("write")%></button>
          </div>
        </div>
      </div>
    </div>
    <%- include ./../footer.ejs %>
  </body>
</html>
