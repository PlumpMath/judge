<!DOCTYPE html>
<html>
	<head>
		<title><%=file.name%+': '+file.path%></title>
		<link rel="stylesheet" href="<%=style%>/css/file-manager.css">
	</head>
	<body>
		<div id="path">
			<a id="parent" href="<%=file.parentUrl%>">..</a>
			<span class="path"><%=file.path%></span>
		</div>
		<% if (/^image\//.test(file.mimeType || file.mimeGuess)) { %>
			<div id="main" class="image">
				<img src="<%=file.rawUrl%>">
			</div>
		<% } else {%>
			<iframe id="main" src="<%=file.rawUrl%>">
			</iframe>
		<% } %>
		<script src="<%=style%>/js/file-manager/page-drop.js"></script>
		<script>
			pageDrop({
				method: 'PUT',
				url: <%=file.rawUrl%>
			});
		</script>
	</body>
</html>
