<html>
  <head>
    <title>Problem Information</title>
    <%- include head.ejs %>
    <link rel="stylesheet" type="text/css" href="/static/css/problem-stats.css">
    <script src="/static/js/problem-stats.js"></script>
  </head>
  <body>
    <script>var stats=<%-JSON.stringify(stats)%>;</script>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Judge</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/problems"><%=__("problems")%></a></li>
            <li><a href="/result"><%=__("submitHistory")%></a></li>
            <li><a href="/rank"><%=__("rank")%></a></li>
            <li><a href="#"><%=__("contests")%></a></li>
          </ul>
          <%- include ./topbar-right.ejs %>
        </div>
      </div>
    </nav>
    <div class="container" id="div-content">
      <div class="row">
        <div class="page-header">
          <h3 id="title"><%=__("problemStatsFor",id)%></h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <table class="table">
            <thead>
              <tr>
                <th><%=__("result")%></th>
                <th><%=__("count")%></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%=__("submitCount")%></td>
                <td><%=stats.submit_count%></td>
              </tr>
              <tr>
                <td><%=__("acceptCount")%></td>
                <td><%=stats.ac_count%></td>
              </tr>
              <tr>
                <td><%=__("acceptUsers")%></td>
                <td><%=stats.ac_users_count%></td>
              </tr>
              <% if(stats.wa_count>0) { %>
              <tr>
                <td><%=__("wrongAnswer")%></td>
                <td><%=stats.wa_count%></td>
              </tr>
              <% } %>
              <% if(stats.ce_count>0) { %>
              <tr>
                <td><%=__("compileError")%></td>
                <td><%=stats.ce_count%></td>
              </tr>
              <% } %>
              <% if(stats.re_count>0) { %>
              <tr>
                <td><%=__("runtimeError")%></td>
                <td><%=stats.re_count%></td>
              </tr>
              <% } %>
              <% if(stats.tle_count>0) { %>
              <tr>
                <td><%=__("timeExceeded")%></td>
                <td><%=stats.tle_count%></td>
              </tr>
              <% } %>
              <% if(stats.me_count>0) { %>
              <tr>
                <td><%=__("memoryExceeded")%></td>
                <td><%=stats.me_count%></td>
              </tr>
              <% } %>
              <% if(stats.ole_count>0) { %>
              <tr>
                <td><%=__("outputExceeded")%></td>
                <td><%=stats.ole_count%></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="col-md-8">
          <div id="div-stat-donutchart" class="chart"></div>
        </div>
      </div>
    </div>
  </body>
</html>
