<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Problem Information</title>
    <!--<script type="text/javascript" src="/static/js/tools.js"></script>-->
    <script
		  src="https://code.jquery.com/jquery-3.1.1.min.js"
		  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
		  crossorigin="anonymous">
    </script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://cdn.jsdelivr.net/clipboard.js/1.5.16/clipboard.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/static/css/problem-stats.css">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
      integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous">
    </script>
    <script src="/static/js/problem-stats.js"></script>
  </head>
  <body>
    <script>var stats=<%-JSON.stringify(stats)%>;</script>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Judge</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/problems">Problems</a></li>
            <li><a href="/result">Submits</a></li>
            <li><a href="/rank">User Rank</a></li>
            <li><a href="#">Contests</a></li>
          </ul>
          <%- include topbar-right.ejs %>
        </div>
      </div>
    </nav>
    <div class="container" id="div-content">
      <div class="row">
        <div class="page-header">
          <h3 id="title"><%= "Stats for Problem "+id %></h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <table class="table">
            <thead>
              <tr>
                <th>Result</th>
                <th>#</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Total Submissions</td>
                <td><%=stats.submit_count%></td>
              </tr>
              <tr>
                <td>Accepted</td>
                <td><%=stats.ac_count%></td>
              </tr>
              <tr>
                <td>Accepted Users</td>
                <td><%=stats.ac_users_count%></td>
              </tr>
              <% if(stats.wa_count>0) { %>
              <tr>
                <td>Wrong Answer</td>
                <td><%=stats.wa_count%></td>
              </tr>
              <% } %>
              <% if(stats.ce_count>0) { %>
              <tr>
                <td>Compile Error</td>
                <td><%=stats.ce_count%></td>
              </tr>
              <% } %>
              <% if(stats.re_count>0) { %>
              <tr>
                <td>Runtime Error</td>
                <td><%=stats.re_count%></td>
              </tr>
              <% } %>
              <% if(stats.tle_count>0) { %>
              <tr>
                <td>Time Limit Exceeded</td>
                <td><%=stats.tle_count%></td>
              </tr>
              <% } %>
              <% if(stats.me_count>0) { %>
              <tr>
                <td>Memory Limit Exceeded</td>
                <td><%=stats.me_count%></td>
              </tr>
              <% } %>
              <% if(stats.ole_count>0) { %>
              <tr>
                <td>Output Limit Exceeded</td>
                <td><%=stats.ole_count%></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="col-md-8">
          <div id="div-stat-donutchart" class="chart"></div>
        </div>
      </div>
    </div>
  </body>
</html>
