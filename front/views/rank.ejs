<html>
  <head>
    <title><%=__("rank")%></title>
    <%- include head.ejs %>
    <link rel="stylesheet" type="text/css" href="/static/css/rank.css">
    <script src="/static/js/rank.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><%=__("judgeTitle")%></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%=__("board")%>
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/board"><%=__("allPosts")%></a></li>
                <li><a href="/board/free"><%=__("free")%></a></li>
                <li><a href="/board/code"><%=__("code")%></a></li>
                <li><a href="/board/qna"><%=__("qna")%></a></li>
                <li><a href="/board/help"><%=__("help")%></a></li>
              </ul>
            </li>
            <li><a href="/problems"><%=__("problems")%></a></li>
            <li><a href="/result"><%=__("submitHistory")%></a></li>
            <li class="active"><a href="/rank"><%=__("rank")%></a></li>
            <li><a href="#"><%=__("contests")%></a></li>
          </ul>
          <%- include ./topbar-right.ejs %>
        </div>
      </div>
    </nav>
    <div class="container" id="div-content">
      <script>
        var page=<%= page %>;
      </script>
      <div class="row">
        <div class="col-md-3">
          <div class="list-group" id="div-sidebar" data-spy="affix">
            <a class="list-group-item active" href="#">User Rank</a>
            <a class="list-group-item" href="#">All</a>
            <a class="list-group-item" href="#">Spaceholder</a>
        	</div>
    		</div>
        <div class="col-md-9">
          <table class="table table-striped">
            <thead>
              <tr>
                <th class="col-xs-1"><%=__("rank")%></th>
                <th class="col-xs-3"><%=__("username")%></th>
                <th class="col-xs-2"><%=__("submitCount")%></th>
                <th class="col-xs-2"><%=__("acceptProblemCount")%></th>
                <th class="col-xs-2"><%=__("acceptCount")%></th>
                <th class="col-xs-2"><%=__("acRate")%></th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0;i<users.length;i++) { %>
                <tr>
                  <td><%=(page-1)*25+i+1%></td>
                  <td><a href=<%= "/user/"+users[i].user_id %>><%=users[i].nickname%></a></td>
                  <td><%=users[i].submit_count%></td>
                  <td><%=users[i].ac_problem_count%></td>
                  <td><%=users[i].ac_count%></td>
                  <td>
                    <%if(users[i].submit_count>0) {%>
                       <%=(users[i].ac_rate).toFixed(2)+"%" %>
                    <%} else {%>
                      0%
                    <%}%>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
          <div id="div-pages" class="row">
            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default" id="btn-prevpage"><%=__("prev")%></button>
              <button type="button" class="btn btn-default"><%=__("pageText",page)%></button>
              <button type="button" class="btn btn-default" id="btn-nextpage"><%=__("next")%></button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include footer.ejs %>
  </body>
</html>
