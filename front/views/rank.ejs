<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Problem Information</title>
    <!--<script type="text/javascript" src="/static/js/tools.js"></script>-->
    <script
      src="https://code.jquery.com/jquery-3.1.1.min.js"
      integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
      crossorigin="anonymous">
    </script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://cdn.jsdelivr.net/clipboard.js/1.5.16/clipboard.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/static/css/rank.css">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
      integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous">
    </script>
    <script src="/static/js/rank.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Judge</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/problems">Problems</a></li>
            <li><a href="/result">Submits</a></li>
            <li class="active"r><a href="/rank">User Rank</a></li>
            <li><a href="#">Contests</a></li>
          </ul>
          <%- include topbar-right.ejs %>
        </div>
      </div>
    </nav>
    <div class="container" id="div-content">
      <script>
        var page=<%= page %>;
      </script>
      <div class="row">
        <div class="col-md-3">
          <div class="list-group" id="div-sidebar" data-spy="affix">
            <a class="list-group-item active" href="#">User Rank</a>
            <a class="list-group-item" href="#">All</a>
            <a class="list-group-item" href="#">Spaceholder</a>
        	</div>
    		</div>
        <div class="col-md-9">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Rank</th>
                <th>Nickname</th>
                <th>Submit #</th>
                <th>Accept #</th>
                <th>AC Rate</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0;i<users.length;i++) { %>
                <tr>
                  <td><%=(page-1)*25+i+1%></td>
                  <td><a href=<%= "/user/"+users[i].user_id %>><%=users[i].nickname%></a></td>
                  <td><%=users[i].submit_count%></td>
                  <td><%=users[i].ac_count%></td>
                  <td>
                    <%if(users[i].submit_count>0) {%>
                       <%=((users[i].ac_count*100)/users[i].submit_count).toFixed(0)+"%" %>
                    <%} else {%>
                      0%
                    <%}%>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
          <div id="div-pages" class="row">
            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default" id="btn-prevpage">Left</button>
              <button type="button" class="btn btn-default"><%='Page '+page%></button>
              <button type="button" class="btn btn-default" id="btn-nextpage">Right</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
