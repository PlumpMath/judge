<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Problem Information</title>
    <!--<script type="text/javascript" src="/static/js/tools.js"></script>-->
    <script
		  src="https://code.jquery.com/jquery-3.1.1.min.js"
		  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
		  crossorigin="anonymous">
    </script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
      integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
    crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/clipboard.js/1.5.16/clipboard.min.js"></script>
    <script src="/static/js/ace-min/ace.js" type="text/javascript" charset="utf-8"></script>
    <link rel="stylesheet" type="text/css" href="/static/css/submit.css">
    <script src="/static/js/submit.js"></script>
  </head>
  <body>
    <script>var probID = <%=id%></script>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Judge</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li class="active"><a href="/problems">Problems</a></li>
            <li><a href="/rank">User Rank</a></li>
            <li><a href="/contest">Contests</a></li>
          </ul>
          <%- include topbar-right.ejs %>
        </div>
      </div>
    </nav>
    <div class="container" id="div-content">
      <div class="row">
        <div class="div-header div-header">
          <h1 id="title"><%= "Submit for Problem "+id %></h1>
        </div>
      </div>
      <div class="row">
        <form id="form-submit">
          <div class="div-header">
            <div class="col-md-6" id="div-commands">
              <button type="button" class="btn btn-default btn-md" id="btn-submit">Submit</button>
              <button type="button" class="btn btn-danger btn-md">Clear code</button>
            </div>
            <div class="col-md-6" id="div-lang">
              <select id="select-lang" class="form-control">
                <% for(var i=0;i<languages.length;i++) {%>
                  <option value="<%= languages[i].codename %>" data-acelang="<%= languages[i].ace_lang %>"><%= languages[i].name %></option>
                <% } %>
              </select>
            </div>
            <!--<button type="button" class="btn btn-warning btn-md">Retrieve my last submit</button>-->
          </div>
        </form>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div id="div-editor"></div>
        </div>
      </div>
      <div class="row" id="div-codemetrics">
        <div class="col-lg-12">
          <span id="cursor-loc" class="label label-default">Line 1, Column 1</span>
          <span id="code-count" class="label label-default">0 characters, 1 lines of code</span>
        </div>
      </div>
    </div>
  </body>
</html>
