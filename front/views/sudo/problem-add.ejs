<html>
  <head>
    <title><%=__("sudoProblemAdd")%></title>
    <%- include head.ejs %>
    <script src="//cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>
    <link rel="stylesheet" type="text/css" href="/static/css/sudo/problem-add.css">
    <script src="/static/js/sudo/problem-add.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><%=__("judgeTitle")%></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/sudo"><%=__("menuSudoMain")%></a></li>
            <li><a href="/sudo/problems"><%=__("menuSudoProblems")%></a></li>
            <li class="active"><a href="/sudo/problems/add"><%=__("menuSudoProblemAdd")%></a></li>
            <li><a href="/sudo/cases"><%=__("menuSudoCases")%></a></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%=__("masterMenus")%>
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/sudo/master/types"><%=__("editTypes")%></a></li>
                <li><a href="/sudo/master/accounts"><%=__("manageAccounts")%></a></li>
                <li><a href="/sudo/master/server"><%=__("serverStatus")%></a></li>
                <li><a href="/sudo/master/kue"><%=__("kueManage")%></a></li>
              </ul>
            </li>
          </ul>
          <%- include ./../topbar-right.ejs %>
        </div>
      </div>
    </nav>
    <div class="container" id="div-content">
      <div class="row">
        <div class="col">
          <h4>
            <span class="label label-info"><%= __("addProblem")%>
            </span>
          </h4>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <button type="button" class="btn btn-default btn-sm" id="btn-submit"><%=__("submit")%></button>
          <button type="button" class="btn btn-danger btn-sm" id="btn-return"><%=__("return")%></button>
        </div>
      </div>
      <div class="row">
        <div class="col">
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="input-group">
            <span class="input-group-addon" id="title-title"><%=__("title")%></span>
            <input type="text" class="form-control" id="input-title" aria-describedby="basic-addon3" value="">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="input-group">
            <span class="input-group-addon" id="title-memory"><%=__("memoryLimit")%> (MB)</span>
            <input type="text" class="form-control" id="input-memory" aria-describedby="basic-addon3" value="128">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="input-group">
            <span class="input-group-addon" id="title-time"><%=__("timeLimit")%> (s)</span>
            <input type="text" class="form-control" id="input-time" aria-describedby="basic-addon3" value="1">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="input-group">
            <span class="input-group-addon" id="title-time"><%=__("source")%></span>
            <input type="text" class="form-control" id="input-source" aria-describedby="basic-addon3" value="">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%=__("selectType") %>:
          <select id="select-type">
            <option value="0"><%=__("none")%></option>
            <% for(var i=0;i<types.length;i++) {%>
              <option value="<%= types[i].id %>"><%= types[i].title %></option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%=__("sample_input")%></h3>
            </div>
            <div class="panel-body">
              <textarea name="inputExEditor" id="editor-in-sample" class="textarea-io" rows=10></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%=__("sample_output")%></h3>
            </div>
            <div class="panel-body">
              <textarea name="outputExEditor" id="editor-out-sample" class="textarea-io" rows=10></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%=__("description")%></h3>
            </div>
            <div class="panel-body">
              <textarea name="descEditor" id="editor-desc"></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%=__("input")%></h3>
            </div>
            <div class="panel-body">
              <textarea name="inputEditor" id="editor-input"></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%=__("output")%></h3>
            </div>
            <div class="panel-body">
              <textarea name="outputEditor" id="editor-output"></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include ./../footer.ejs %>
  </body>
</html>
