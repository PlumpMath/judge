<html>
  <head>
    <title>root@judge: #</title>
    <%- include head.ejs %>
    <link rel="stylesheet" type="text/css" href="/static/css/sudo/types.css">
    <script src="/static/js/sudo/types.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><%=__("judgeTitle")%></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <ul class="nav navbar-nav">
              <li><a href="/sudo"><%=__("menuSudoMain")%></a></li>
              <li><a href="/sudo/problems"><%=__("menuSudoProblems")%></a></li>
              <li><a href="/sudo/problems/add"><%=__("menuSudoProblemAdd")%></a></li>
              <li><a href="/sudo/cases"><%=__("menuSudoCases")%></a></li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%=__("masterMenus")%>
                <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li class="active"><a href="/sudo/master/types"><%=__("editTypes")%></a></li>
                  <li><a href="/sudo/master/accounts"><%=__("manageAccounts")%></a></li>
                  <li><a href="/sudo/master/server"><%=__("serverStatus")%></a></li>
                </ul>
              </li>
            </ul>
          </ul>
          <%- include ./../topbar-right.ejs %>
        </div>
      </div>
    </nav>
    <div id="addModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><%=__("addTypeTitle")%></h4>
          </div>
          <div class="modal-body">
            <div id="modaladd-title-empty" class="alert alert-danger">
              <strong><%=__("titleEmpty")%></a>
            </div>
            <div class="input-group">
              <span class="input-group-addon"><%=__("title")%></span>
              <input type="text" class="form-control" id="addTitle" aria-describedby="basic-addon3">
            </div>
              <div class="input-group">
                <span class="input-group-addon"><%=__("description")%></span>
                <input type="text" class="form-control" id="addDesc" aria-describedby="basic-addon3">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" id="btn-addType" class="btn btn-default btn-md"><%=__("save")%></button>
          </div>
        </div>
      </div>
    </div>
    <div id="editModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <input type="hidden" id="editId">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><%=__("editTypeTitle")%></h4>
          </div>
          <div class="modal-body">
            <div class="input-group">
              <span class="input-group-addon"><%=__("title")%></span>
              <input type="text" class="form-control" id="editTitle" aria-describedby="basic-addon3">
            </div>
              <div class="input-group">
                <span class="input-group-addon"><%=__("description")%></span>
                <input type="text" class="form-control" id="editDesc" aria-describedby="basic-addon3">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" id="btn-editType" class="btn btn-default btn-md"><%=__("save")%></button>
          </div>
        </div>
      </div>
    </div>
    <div class="container" id="div-content">
      <button type="button" class="btn btn-sm btn-normal" data-toggle="modal" data-target="#addModal"><%=__("typeAdd")%></button>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th><%=__("title")%></th>
            <th><%=__("description")%></th>
            <th><%=__("sudoActions")%></th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0;i<types.length;i++) { %>
            <tr>
              <td id="<%='td-id-'+types[i].id%>"><%=types[i].id%></td>
              <td id="<%='td-title-'+types[i].id%>"><%=types[i].title%></td>
              <td id="<%='td-desc-'+types[i].id%>"><%=types[i].description%></td>
              <td>
                <button type="button" class="btn btn-sm btn-normal btn-typeEdit" data-id="<%=types[i].id%>"><%=__("typeEdit")%></button>
                <button type="button" class="btn btn-sm btn-danger btn-typeDelete" data-id="<%=types[i].id%>"><%=__("typeDelete")%></button>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <%- include ./../footer.ejs %>
  </body>
</html>
